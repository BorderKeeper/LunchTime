@model IEnumerable<RestaurantModel>

@{
    ViewData["Title"] = "Learned Restaurant Menus";
}

<h2>Learned Restaurant Menus</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultType)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { restaurantId = item.RestaurantId }) |
                @Html.ActionLink("Delete", "Delete", 
                    new { restaurantId = item.RestaurantId }, 
                    new { onclick = "return confirm('Are you sure you want to delete this item?');" })
            </td>
        </tr>
}
    </tbody>
</table>
